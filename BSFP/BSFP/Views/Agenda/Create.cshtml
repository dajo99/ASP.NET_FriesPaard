@model BSFP.ViewModels.CreateAgendaViewModel

@{
    ViewData["Title"] = "Create";
}
<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>Agenda</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <h4>Activiteit aanmaken</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Agenda.Titel" class="control-label"></label>
                        <input asp-for="Agenda.Titel" class="form-control" />
                        <span asp-validation-for="Agenda.Titel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda.Omschrijving" class="control-label"></label>
                        <textarea asp-for="Agenda.Omschrijving" class="form-control" cols="100" rows="16" placeholder="Vertel over de activiteit"></textarea>
                        <span asp-validation-for="Agenda.Omschrijving" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda.Datum" class="control-label"></label>
                        <input asp-for="Agenda.Datum" class="form-control" type="date" />
                        <span asp-validation-for="Agenda.Datum" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda.Starttijd" class="control-label"></label>
                        <input asp-for="Agenda.Starttijd" class="form-control" type="time" />
                        <span asp-validation-for="Agenda.Starttijd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda.Eindtijd" class="control-label"></label>
                        <input asp-for="Agenda.Eindtijd" class="form-control" type="time" />
                        <span asp-validation-for="Agenda.Eindtijd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda.Locatie" class="control-label"></label>
                        <input asp-for="Agenda.Locatie" class="form-control" />
                        <span asp-validation-for="Agenda.Locatie" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <a class="btn btn-primary col-5" style="background-color: #caa500; border: 1px solid #1C3153; color:#1C3153; margin-bottom:5px" asp-action="Index">Terug</a>
                        </div>
                        <div class="form-group col-6 text-right">
                            <input type="submit" value="Plaatsen" class="btn btn-primary col-5" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
