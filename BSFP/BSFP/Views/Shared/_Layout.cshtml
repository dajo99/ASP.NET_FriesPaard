@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BSFP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
   
    <nav class="navbar navbar-expand-lg navbar-dark bg-gold box-shadow" id="mainNav">

        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img id="navLogo" src="~/Images/logo-website.png" class="d-inline-block align-top" width="310" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav  ml-auto mr-lg-4">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownActueel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @localizer["HetBSFP"]
                        </a>
                        <div class="dropdown-menu" style="width:750px" aria-labelledby="navbarDropdownActueel">
                            <div class="row">
                                <div class="col-lg-3 col-sm-12">
                                    <p class="dropdown-item-text" style="font-weight:bold">@localizer["Actueel"]</p>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Nieuws" asp-action="Index">@localizer["Nieuws"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["Agenda"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="FriesPaard">@localizer["HetFriesePaard"]</a>
                                </div>
                                <div class="col-lg-4 col-sm-12">
                                    <p class="dropdown-item-text" style="font-weight:bold">@localizer["Informatie"]</p>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Nieuws" asp-action="Index">@localizer["AlgemeneInformatie"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="PaardenpuntVlaanderen">@localizer["PaardenpuntVlaanderen"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="LidWorden">@localizer["LidWorden"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="FriesPaard">@localizer["IndentificatiePaard"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Bestuur"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["JongBSFP"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Mennen"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Infodagen"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Verzekeringen"]</a>
                                </div>
                                <div class="col-lg-4 col-sm-12">
                                    <p class="dropdown-item-text" style="font-weight:bold">@localizer["Reglementen"]</p>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["Registratiereglement"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["InterneReglementen"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Nieuws" asp-action="Index">@localizer["Geschillenregeling"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["ProtocolAankoopPaard"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="FriesPaard">@localizer["VaststellenRegistrerenValideren"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Tarieven"]</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["Statuten"]</a>
                                </div>
                            </div>

                        </div>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownActueel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @localizer["Dressuur"]
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownActueel">
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Nieuws" asp-action="Index">@localizer["Trofee"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["PavoPhrysoBokaal"]</a>
                        </div>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownActueel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @localizer["Fokkerij"]
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownActueel">
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Nieuws" asp-action="Index">@localizer["Fokdoel"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">@localizer["Fokprogramma"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="FriesPaard">@localizer["ActieveHengsten"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["DNA-Test"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["Hengstenkeuze"]</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Informatie" asp-action="JongBSFP">@localizer["InteeltVerwantschap"]</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Paard" asp-action="Index">@localizer["Marktplaats"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Sponsors" asp-action="Index">@localizer["Sponsors"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">@localizer["Contact"]</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>

    </nav>
    @RenderBody()
    <footer class="py-4 flex-shrink-0" style="border-top: 6px solid #147e9e; box-shadow: 10px 18px 10px 18px #888888">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 mb-md-0">
                        <p><img src="~/Images/logo_footer.png" alt="" width="220"></p>
                    </div>
                    <div class="col-md-4 mb-md-0 pl-md-4 mt-2 ">
                        <h2>@localizer["Gegevens"]</h2>
                        <ul class="mb-sm-2 fa-ul">
                            <li>
                                <span class="fa-li"><i class="fas fa-phone-alt"></i></span><a href="tel:+32472667299">+32.(0)472.66.72.99</a>
                            </li>
                            <li class="foot-link ">
                                <span class="fa-li"><i class="far fa-envelope"></i></span><a href="mailto:bsfp@gmail.be">bsfp&commat;gmail.be</a>
                            </li>
                            <li><small>BTW </small>BE40.7352.2302.0263</li>
                        </ul>
                    </div>
                    <div class="col-md-3 mb-0 my-md-2 ">
                        <h2>@localizer["Adres"]</h2>
                        <p>
                            <strong>BSFP-SBCF</strong> <br>
                            <span class="text-nowrap">Maastrichtersteenweg 308</span><br>
                            B-3500 Hasselt - België
                        </p>
                    </div>
                </div>
                <hr class="mb-sm-2 my-0">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-0 text-muted">
                            <p>
                                @localizer["FooterIntro"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <p class="foot-link copyright mb-0">
                    &copy; 2021 BSFP-SBCF&nbsp;&nbsp;|&nbsp;&nbsp;<a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
                </p>
            </div>
        </div>
    </footer>

    <script src="https://kit.fontawesome.com/ecadc53a85.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
