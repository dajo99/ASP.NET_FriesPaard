@using Microsoft.AspNetCore.Identity
@using BSFP.Areas.Identity.Data
@using System.Globalization;
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown navbar-nav  my-lg-0 ml-lg-5">
        <a class="btn btn-primary dropdown-toggle" style="background-color: #1C3153; border: 1px solid #147e9e; color: #fff;" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="2 2 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
            </svg>
            @User.Identity.Name
        </a>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@localizer["Account"]</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Member" asp-action="Index">@localizer["Ledenbeheer"]</a>
                </li>
                <li>
                    <a class="dropdown-item text-dark" href="https://webmail.mijnhostingpartner.nl/" target="_blank">@localizer["Mailbox"]</a>
                </li>
            }
            <li>
                <a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="ComingSoon">@localizer["Helpdesk"]</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark" style="margin:0px 0px 0px 14px">@localizer["Uitloggen"]</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{

    <div class="dropdown navbar-nav  my-lg-0 ml-lg-5">
        <a class="btn btn-primary dropdown-toggle" style="background-color: #1C3153; border: 1px solid #147e9e; color: #fff;" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="2 2 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
            </svg>
            @localizer["MijnAccount"]
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Login">@localizer["Inloggen"]</a>
            <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Register">@localizer["Registreren"]</a>
            <a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="ComingSoon">@localizer["Helpdesk"]</a>
        </div>
    </div>


}
<ul class="navbar-nav  my-lg-0">
    <li class="nav-item">
        @await Html.PartialAsync("_CulturePartial")
    </li>
</ul>

