@model BSFP.ViewModels.EditPaardViewModel

@{
    ViewData["Title"] = "Edit";
}
<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>Marktplaats</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <h4>Advertentie Aanpassen</h4>
        <hr />
        <div class="row">
            <div class="col-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="row" style="margin:1px">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Paard.PaardID" />
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Paardnaam" class="control-label">Naam van het Paard</label>
                            <input asp-for="Paard.Paardnaam" class="form-control" />
                            <span asp-validation-for="Paard.Paardnaam" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Geslacht" class="control-label"></label>
                            <select asp-for="Paard.Geslacht" class="form-control">
                                <option selected>Kies...</option>
                                <option value="HENGST">HENGST</option>
                                <option value="MERRIE">MERRIE</option>
                                <option value="RUIN">RUIN</option>
                            </select>
                            <span asp-validation-for="Paard.Geslacht" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Leeftijd" class="control-label"></label>
                            <input asp-for="Paard.Leeftijd" class="form-control" />
                            <span asp-validation-for="Paard.Leeftijd" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Levensnummer" class="control-label"></label>
                            <input asp-for="Paard.Levensnummer" class="form-control" />
                            <span asp-validation-for="Paard.Levensnummer" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Gebruiksdiscipline" class="control-label"></label>
                            <select asp-for="Paard.Gebruiksdiscipline" class="form-control">
                                <option selected>Kies...</option>
                                <option value="DRESSUURPAARD">DRESSUURPAARD</option>
                                <option value="MENPAARD">MENPAARD</option>
                                <option value="TUIGPAARD">TUIGPAARD</option>
                                <option value="Niet van Toepassing">Niet van Toepassing</option>
                            </select>
                            <span asp-validation-for="Paard.Gebruiksdiscipline" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Stokmaat" class="control-label">Stokmaat(in cm)</label>
                            <input asp-for="Paard.Stokmaat" class="form-control" />
                            <span asp-validation-for="Paard.Stokmaat" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.Prijs" class="control-label">Prijs(in €)</label>
                            <input asp-for="Paard.Prijs" class="form-control" />
                            <span asp-validation-for="Paard.Prijs" class="text-danger"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="Paard.LocatiePaard" class="control-label">Locatie van het Paard</label>
                            <select asp-for="Paard.LocatiePaard" class="form-control">
                                <option selected>Kies...</option>
                                <option value="Antwerpen">Antwerpen</option>
                                <option value="Limburg">Limburg</option>
                                <option value="Oost-Vlaanderen">Oost-Vlaanderen</option>
                                <option value="Vlaams-Brabant">Vlaams-Brabant</option>
                                <option value="West-Vlaanderen">West-Vlaanderen</option>
                                <option value="Henegouwen">Henegouwen</option>
                                <option value="Luik">Luik</option>
                                <option value="Luxemburg">Luxemburg</option>
                                <option value="Namen">Namen</option>
                                <option value="Waals-Brabant">Waals-Brabant</option>
                                <option value="In het Buitenland">In het Buitenland</option>
                                <option value="Niet van Toepassing">Niet van Toepassing</option>
                            </select>
                            <span asp-validation-for="Paard.LocatiePaard" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-lg-12">
                        <label asp-for="Paard.Informatie" class="control-label"></label>
                        <textarea asp-for="Paard.Informatie" class="form-control" cols="100" rows="20" placeholder="Beschrijf het paard"></textarea>
                        <span asp-validation-for="Paard.Informatie" class="text-danger"></span>
                    </div>

                    <div class="row" style="margin:1px">
                        <div id="divImage1" class="form-group col-6">
                            <label asp-for="Paard.Image1" class="control-label">Foto 1</label>
                            <input id="inputImage1" asp-for="Paard.Image1" class="form-control" accept="image/*" />
                            <img id="Image1" src="@Model.Paard.ImagePath1" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                            <span asp-validation-for="Paard.Image1" class="text-danger"></span>
                        </div>
                        <div id="divImage2" class="form-group col-6" >
                            <label asp-for="Paard.Image2" class="control-label">Foto 2</label>
                            <input id="inputImage2" asp-for="Paard.Image2" class="form-control" accept="image/* " />
                            <img id="Image2" src="@Model.Paard.ImagePath2" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                            <span asp-validation-for="Paard.Image2" class="text-danger"></span>
                        </div>
                        <div id="divImage3" class="form-group col-6">
                            <label asp-for="Paard.Image3" class="control-label">Foto 3</label>
                            <input id="inputImage3" asp-for="Paard.Image3" class="form-control" accept="image/*" />
                            <img id="Image3" src="@Model.Paard.ImagePath3" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                            <span asp-validation-for="Paard.Image3" class="text-danger"></span>
                        </div>
                        <div id="divImage4" class="form-group col-6">
                            <label asp-for="Paard.Image4" class="control-label">Foto 4</label>
                            <input id="inputImage4" asp-for="Paard.Image4" class="form-control" accept="image/*" onchange="document.getElementById('Image4').src = window.URL.createObjectURL(this.files[0])" />
                            <img id="Image4" src="@Model.Paard.ImagePath4" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                            <span asp-validation-for="Paard.Image4" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Opslaan" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}