@model BSFP.ViewModels.ListNieuwsViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using System.Globalization;

@{
    ViewData["Title"] = "Index";
}
<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>@localizer["String5"]</h1>
        </div>
    </div>

</header>
<style>
    .fill {
        overflow: hidden;
        background-size: cover;
        background-position: center;
    }

    .type {
        background-color: #fdd023;
        padding: 5px 15px;
        position: absolute;
        top: 25px;
        left: -10px;
        color: #1C3153;
        font-family: 'Ropa Sans', sans-serif;
        font-size: 1.5em;
        text-transform: uppercase;
    }

    h3 {
        color: #147e9e;
        margin-top: 80px;
    }
</style>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">

        @if (this.User.IsInRole("Admin"))
        {
            <p>
                <a asp-action="Create">Artikel aanmaken</a>
            </p>
        }

        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Nieuws" asp-action="Search" method="get">
                    <div class="input-group col-sm-12 col-md-8 col-lg-5" style="margin: auto">
                        <input asp-for="Search" type="text" class="form-control" aria-label="Nieuws" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">@localizer["String6"]</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

        <br />
        @foreach (var item in Model.NieuwsLijst)
        {
            <div class="row" style="box-shadow: 5px 10px 18px #888888; margin-top: 40px">
                <div class="col-sm-12">
                    <div class="row d-flex article">
                        <div class="col-md-5 fill" style="background-image: url(@item.ImagePath)">
                        </div>
                        <div class="col-md-7 content">
                            <div class="type">@Html.DisplayFor(modelItem => item.Vereneging)</div>
                            @if (CultureInfo.CurrentCulture.Name == "nl")
                            {
                                <h3 style="text-transform:uppercase">@Html.DisplayFor(modelItem => item.Titel_nl)</h3>
                            }
                            @if (CultureInfo.CurrentCulture.Name == "fr")
                            {
                                <h3 style="text-transform:uppercase">@Html.DisplayFor(modelItem => item.Titel_fr)</h3>
                            }


                            <p style="font-weight: bold">@localizer["String1"] @Convert.ToDateTime(item.Datum).ToString("dd/MM/yyyy HH:mm")</p>
                            <div class="post-text">
                                @if (CultureInfo.CurrentCulture.Name == "nl")
                                {
                                    <p>@Html.Raw(item.Intro_nl)</p><br>
                                }
                                @if (CultureInfo.CurrentCulture.Name == "fr")
                                {
                                    <p>@Html.Raw(item.Intro_fr)</p><br>
                                }

                                @if (this.User.IsInRole("Admin"))
                                {
                                    <a asp-action="Details" asp-route-id="@item.NieuwsID">Details |</a>
                                    <a asp-action="Edit" asp-route-id="@item.NieuwsID"> Edit |</a>
                                    <a asp-action="Delete" asp-route-id="@item.NieuwsID"> Delete</a>
                                }
                                else
                                {
                                    <p>
                                        @localizer["String2"] <a asp-action="Details" asp-route-id="@item.NieuwsID">@localizer["String3"] </a>@if(CultureInfo.CurrentCulture.Name == "nl"){@localizer["String4"]}.
                                    </p>
                                }
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <br />
        }


    </section>
</main>

