@model BSFP.ViewModels.CreateNieuwsViewModel

@{
    ViewData["Title"] = "Create";
}


<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>Nieuws</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <h4>Nieuw Artikel</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Titel" class="control-label"></label>
                        <input asp-for="Nieuws.Titel" class="form-control" />
                        <span asp-validation-for="Nieuws.Titel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Intro" class="control-label"></label>
                        <textarea asp-for="Nieuws.Intro" class="form-control" cols="100" rows="5" placeholder="Maak hier je intro"></textarea>
                        <span asp-validation-for="Nieuws.Intro" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nieuws.Omschrijving" class="control-label"></label>
                        <textarea asp-for="Nieuws.Omschrijving" class="form-control" cols="100" rows="16" placeholder="Schrijf hier je artikel"></textarea>
                        <span asp-validation-for="Nieuws.Omschrijving" class="text-danger"></span>
                    </div>

                    <div class="form-group col-5">
                        <label asp-for="Nieuws.File" class="control-label">Voeg een foto toe</label>
                        <input asp-for="Nieuws.File" class="form-control" accept="image/*" onchange="document.getElementById('DemoImage').src = window.URL.createObjectURL(this.files[0])"/>
                        <img id="DemoImage" src="~/Images/demo.png" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />
                       
                        <span asp-validation-for="Nieuws.File" class="text-danger"></span>
                    </div>





                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </section>
</main>

<script>

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
