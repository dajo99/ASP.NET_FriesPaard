@model BSFP.ViewModels.CreateNieuwsViewModel

@{
    ViewData["Title"] = "Create";
}

<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>Nieuws</h1>
        </div>
    </div>

</header>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<!-- include summernote css/js -->

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <h4>Nieuw Artikel</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Vereneging" class="control-label"></label>
                        <select asp-for="Nieuws.Vereneging" class="form-control">
                            <option selected value="BSFP-SBCF">BSFP-SBCF</option>
                            <option value="JongBSFP">JongBSFP</option>
                        </select>
                        <span asp-validation-for="Nieuws.Vereneging" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.File" class="control-label">Voeg een foto toe</label>
                        <input asp-for="Nieuws.File" class="form-control" accept="image/*" onchange="document.getElementById('DemoImage').src = window.URL.createObjectURL(this.files[0])" />
                        <img id="DemoImage" src="~/Images/demo.png" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                        <span asp-validation-for="Nieuws.File" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Titel_nl" class="control-label"></label>
                        <input asp-for="Nieuws.Titel_nl" class="form-control" />
                        <span asp-validation-for="Nieuws.Titel_nl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Titel_fr" class="control-label"></label>
                        <input asp-for="Nieuws.Titel_fr" class="form-control" />
                        <span asp-validation-for="Nieuws.Titel_fr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Intro_nl" class="control-label"></label>
                        <textarea asp-for="Nieuws.Intro_nl" class="form-control" cols="100" rows="8"></textarea>
                        <span asp-validation-for="Nieuws.Intro_nl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Intro_fr" class="control-label"></label>
                        <textarea asp-for="Nieuws.Intro_fr" class="form-control" cols="100" rows="8"></textarea>
                        <span asp-validation-for="Nieuws.Intro_fr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Omschrijving_nl" class="control-label"></label>
                        <textarea asp-for="Nieuws.Omschrijving_nl" class="form-control summernote"></textarea>
                        <span asp-validation-for="Nieuws.Omschrijving_nl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nieuws.Omschrijving_fr" class="control-label"></label>
                        <textarea asp-for="Nieuws.Omschrijving_fr" class="form-control summernote"></textarea>
                        <span asp-validation-for="Nieuws.Omschrijving_fr" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <a class="btn btn-primary col-5" style="background-color: #caa500; border: 1px solid #1C3153; color:#1C3153; margin-bottom:5px" asp-action="Index">Terug</a>
                        </div>
                        <div class="form-group col-6 text-right">
                            <input type="submit" value="Plaatsen" class="btn btn-primary col-5" />
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </section>
</main>

<script>
    $('.summernote').summernote({
        height: 500
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


