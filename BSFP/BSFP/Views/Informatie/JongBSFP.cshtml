@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>@localizer["Titel"]</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <div class="row mt-sm-3">
            <div class="col-12">
                <h2>@localizer["Titel1"]</h2>
                <br />
                <p style="font-style:italic">
                    @localizer["Intro"]
                </p>
                <br />
                <p style="font-weight:bold">
                    @localizer["Titel2"]
                </p>
                <p>
                    @localizer["Tekst1"]
                </p>
                <ul>
                    <li>@localizer["Lijst1"]</li>
                    <li>@localizer["Lijst2"]</li>
                    <li>@localizer["Lijst3"]</li>
                    <li>@localizer["Lijst4"]</li>
                </ul>
                <br />
                <p>
                    @localizer["Tekst2"]
                </p>
                <p style="font-weight:bold">
                    @localizer["Titel3"]
                </p>
                <p>
                    @localizer["Tekst3"]
                </p>
                <br />
                <p>@localizer["WebsiteInfo"] <a href="www.jongbsfp-sbcfjeune.net">www.jongbsfp-sbcfjeune.net</a></p>


            </div>

        </div>

    </section>
</main>