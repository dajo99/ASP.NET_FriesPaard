    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>@localizer["Titel"]</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <div class="row mt-sm-3">
            <div class="col-12">
                <h2>@localizer["Titel1"]</h2>
                <p>
                    @localizer["Tekst1"]
                </p>
                <br />
                <h2>@localizer["Titel2"]</h2>
                <p>
                    @localizer["Tekst2"]
                </p>
                <br />
                <p>
                    @localizer["Tekst3"]
                </p>
                <ul>
                    <li>@localizer["Lijst1"]</li>
                    <li>@localizer["Lijst2"]</li>
                    <li>@localizer["Lijst3"]</li>
                </ul>
                <br />
                <p>
                    @localizer["Tekst4"]
                </p>
                <br />
                <a href="www.paarden.vlaanderen">@localizer["Link"]</a>
                <br />
                <p>
                    @localizer["Tekst5"]
                </p>
                <br />
                <p>
                    @localizer["Tekst6"]
                </p>
                <br />
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <img src="~/Images/Britt_Verbeeck.jpg" class="img-fluid" width="180" alt="" />
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <p style="font-weight:bold">Britt Verbeeck, <span>@localizer["Functie"]</span></p>
                        <p style="text-transform:uppercase">@localizer["Bedrijf"]</p>
                        <p>T: 016 899 410 | M: 0472 43 95 54 | <a href="mailto:communicatie@paarden.vlaanderen">communicatie@paarden.vlaanderen</a></p>
                        <p>Ambachtenlaan 23/2b; 3001 Heverlee (B)</p>
