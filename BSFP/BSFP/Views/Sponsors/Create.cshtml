@model BSFP.ViewModels.CreateSponsorViewModel

@{
    ViewData["Title"] = "Create";
}

<header class="intro bg-image">
    <div class="overlay"></div>
    <div class="intro-content">
        <div class="container">
            <h1>Sponsors</h1>
        </div>
    </div>

</header>

<main role="main" class="flex-shrink-0" style="border-top: 6px solid #147e9e">
    <section class="container py-4">
        <h4>Nieuwe sponsor aanmaken</h4>
        <hr />
        <div class="row">
            <div class="col-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Sponsor.Titel" class="control-label"></label>
                        <input asp-for="Sponsor.Titel" class="form-control" />
                        <span asp-validation-for="Sponsor.Titel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sponsor.Omschrijving" class="control-label"></label>
                        <textarea asp-for="Sponsor.Omschrijving" class="form-control" cols="100" rows="5" placeholder="Geef extra info"></textarea>
                        <span asp-validation-for="Sponsor.Omschrijving" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sponsor.WebsiteLink" class="control-label"></label>
                        <input asp-for="Sponsor.WebsiteLink" class="form-control" />
                        <span asp-validation-for="Sponsor.WebsiteLink" class="text-danger"></span>
                    </div>
                    <div class="form-group col-5">
                        <label asp-for="Sponsor.File" class="control-label">Voeg een foto toe</label>
                        <input asp-for="Sponsor.File" class="form-control" accept="image/*" onchange="document.getElementById('DemoImage').src = window.URL.createObjectURL(this.files[0])" />
                        <img id="DemoImage" src="~/Images/demo.png" class="text-center" alt="" width="200" height="200" style="border:1px ;margin-top:20px; margin-left:120px;" />

                        <span asp-validation-for="Sponsor.File" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Terug naar overzicht</a>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
